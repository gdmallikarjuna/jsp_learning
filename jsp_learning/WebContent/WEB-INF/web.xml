<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Demo_JSP_App</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>tag_name</param-name>
    <param-value>my learning</param-value>
  </context-param>
  <servlet>
    <servlet-name>config_example</servlet-name>
    <jsp-file>/jsp/example_config.jsp</jsp-file>
    <init-param>
      <param-name>driver</param-name>
      <param-value>com.driver.jdbc</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>config_example</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
</web-app>